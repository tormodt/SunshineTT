<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <EditTextPreference
        android:title="@string/pref_location"
        android:key="@string/pref_location_key"
        android:defaultValue="@string/pref_location_default"
        android:inputType="text"
        android:singleLine="true" />

    <ListPreference
        android:title="@string/pref_units_title"
        android:dialogTitle="@string/pref_units_dialog_title"
        android:key="@string/pref_units_key"
        android:entries="@array/pref_display_unit_values"
        android:entryValues="@array/pref_display_unit_entries" />
</PreferenceScreen>
